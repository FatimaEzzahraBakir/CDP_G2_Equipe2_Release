<!DOCTYPE html>
<html lang="fr" dir="ltr">

<head>
  <meta charset="utf-8">
  <link rel="stylesheet" href="/css/materialize.css">
  <link rel="stylesheet" href="/css/style.css">
  <title>Création sprint</title>
</head>

<body>
  <nav class="navmargin">
    <div class="nav-wrapper">
      <a href="/" class="brand-logo">Gestion projets</a>
    </div>
  </nav>
  <div class="container">
    <div class="row">
      <form action="/user/<%= user.login %>/projects/<%= project.id %>/sprints/newSprint" method="POST">
        <div class="row">
          <div class="col s12 m10 l8 offset-m1 offset-l2">
            <div class="card center-align mg">
              <div class="card-content">
                <span class="card-title">Créer un nouveau sprint</span>
                <% errors.forEach(function(error) { %>
                <div class="card-pannel small red darken-2 white-text"><%= error.msg %></div>
                <% }); %>
                <div class="input-field">
                  <label for="ID" class="active">ID</label>
                  <input name="num" type="number" required>
                </div>
                <div class="input-field">
                  <label for="startDate" class="active">Date de début</label>
                  <input name="startDate" type="text" id="datepicker1" placeholder="yyyy/mm/dd" required>
                </div>
                <div class="input-field">
                  <label for="endDate" class="active">Date de fin</label>
                  <input name="endDate" type="text" id="datepicker2" placeholder="yyyy/mm/dd" required>
                </div>
                <div class="input-field">
                  <label for="description" class="active">Description</label>
                  <input name="description" type="text" class="validate materialize-textarea" placeholder="Description" required>
                </div>
                <button class="btn waves-effect waves-light" type="submit">Créer</button>
                <a class="btn waves-effect waves-light red"
                  href="/user/<%= user.login %>/projects/<%= project.id %>/sprints/">Annuler</a>
              </div>
            </div>
          </div>
        </div>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
        <script>
          CalenderObject = {
            format: 'yyyy/mm/dd',
            yearRange: 4,
            firstDay: 1,
            i18n: {
              months: ["Janvier", "Février", "Mars", "Avril", "Mai", "Juin", "Juillet", "Août", "Septembre", "Octobre", "Novembre", "Décembre"],
              monthsShort: ["Jan", "Fév", "Mar", "Avr", "Mai", "Jun", "Jul", "Aoû", "Sep", "Oct", "Nov", "Déc"],
              weekdays: ["Dimanche", "Lundi", "Mardi", "Mercredi", "Jeudi", "Vendredi", "Samedi"],
              weekdaysShort: ["Dim", "Lun", "Mar", "Mer", "Jeu", "Ven", "Sam"],
              weekdaysAbbrev: ["D", "L", "M", "M", "J", "V", "S"],
              cancel: "Annuler"

            }};
          const Calender1 = document.querySelector('#datepicker1');
          M.Datepicker.init(Calender1, CalenderObject);
          const Calender2 = document.querySelector('#datepicker2');
          M.Datepicker.init(Calender2, CalenderObject);
        </script>
</body>

</html>