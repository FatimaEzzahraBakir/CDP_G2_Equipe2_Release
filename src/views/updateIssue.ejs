<!DOCTYPE html>
<html lang="fr" dir="ltr">

<head>
  <meta charset="utf-8">
  <link rel="stylesheet" href="/css/materialize.css">
  <link rel="stylesheet" href="/css/style.css">
  <title>Modifier Issue</title>
</head>

<body>
  <nav class="navmargin">
    <div class="nav-wrapper">
      <a href="/" class="brand-logo">Gestion projets</a>
    </div>
  </nav>
  <div class="container">
    <div class="row">
      <form action="/user/<%= user %>/projects/<%= project.id %>/backlog/<%= issue._id %>/update" method="POST">
        <div class="row">
          <div class="col s12">
            <div class="card center-align mg">
              <div class="card-content">
                <span class="card-title">Modifer l'issue</span>
                <% if (typeof  error != 'undefined') { %>
                <div class="card-pannel small red darken-2 white-text"><%= error %></div>
                <% } %>
                <div class="input-field">
                  <input name="description" type="text" class="validate" value="<%=issue.description%>" required>
                </div>
                <div class="input-field">
                  <p>Difficulté</p>
                  <input name="difficulty" type="number" class="validate" value="<%=issue.difficulty%>" required>
                </div>
                <div class="input-field col s12 ">
                  <select class="browser-default" name="state">
                    <option value="" disabled selected>Etat</option>
                    <option value="DONE"
                      <%if(issue.state=='DONE'){%><%="selected"%><%}%> >Done</option>
                      <option value="DOING" <%if(issue.state=='DOING'){%><%="selected"%><%}%>>Doing</option>
                      <option value="TODO" <%if(issue.state=='TODO'){%><%="selected"%><%}%>>ToDo</option>
                    </select>
                  </div>
                  <div class="input-field col s12 ">
                    <select class="browser-default" name="priority">
                      <option value="" disabled selected>Priorité</option>
                      <option value="HIGH" <%if(issue.priority=='HIGH'){%><%="selected"%><%}%>>High</option>
                      <option value="LOW" <%if(issue.state=='LOW'){%><%="selected"%><%}%>>Low</option>
                    </select>
                  </div>
                  <div class="input-field col s12 ">
                    <select class="browser-default" name="sprint">
                      <% if(typeof sprints != 'undefined') { %>
                        <% sprints.forEach(function(issue) { %>
                          <option value="<%= issue.description %>"><%=issue.description%></option>
                        <% })} %>
                    </select>
                    </div>
                  <button class="btn waves-effect waves-light" type="submit">Mettre à jour</button>
                  <a class="btn waves-effect waves-light red" href="/user/<%= user %>/projects/<%= project.id %>/backlog">Annuler </a>
                      </div> </div> </div> </div> </div> </form> </div> </div> </body> </html>
