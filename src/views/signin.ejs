<!DOCTYPE html>
<html lang="fr" dir="ltr">
<head>
  <meta charset="utf-8">
  <link rel="stylesheet" href="css/materialize.css">
  <link rel="stylesheet" href="css/style.css">
  <title>Connexion</title>
</head>
<body>
  <nav class="navmargin">
    <div class="nav-wrapper">
      <a href="/" class="brand-logo">Gestion projets</a>
    </div>
  </nav>
  <div class="container">
    <div class="row">
      <form action="/signin" method="POST">
        <div class="row">
          <div class="col s12 m6 offset-m3">
            <div class="card center-align mg">
              <div class="card-content">
                <span class="card-title">Connexion</span>
                <% if (typeof  error != 'undefined') { %>
                  <div class="card-pannel small red darken-2 white-text"><%= error %></div>
                <% } %>
                <div class="input-field">
                  <!--<label for="login" class="active">Login</label> -->
                  <input name="login" type="text" class="validate" placeholder="Login" required>
                </div>
                <div class="input-field" >
                  <!--<label for="password" class="active">Password</label> -->
                  <input name="password" type="password" class="validate" placeholder="Password" required>
                </div>
                <button class="btn waves-effect waves-light" type="submit">Connexion</button>
                <a class="btn waves-effect waves-light red" href="/">Retour</a>
              </div>   
            </div>
          </div>
        </div>
      </form>  
    </div>
  </div>
</body>
</html>