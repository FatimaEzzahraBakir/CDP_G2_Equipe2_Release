<!DOCTYPE html>
<html lang="fr" dir="ltr">

<head>
  <meta charset="utf-8">
  <link rel="stylesheet" href="/css/materialize.css">
  <link rel="stylesheet" href="/css/style.css">
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <title>Ajouter un membre</title>
</head>

<body>
  <nav class="navmargin">
    <div class="nav-wrapper">
      <a href="/" class="brand-logo">Gestion projets</a>
    </div>
  </nav>
  <div class="container">
    <div class="row">
      <div class="row">
        <div class="col s12 m6 offset-m3">
          <div class="card center-align mg">
            <div class="card-content">
              <span class="card-title">Assigner un développeur</span>
              <div class="row">
                <% if (typeof  errors != 'undefined') { %>
                <% errors.forEach(function(error) { %>
                <div class="card-pannel small red darken-2 white-text"><%= error.msg %></div>
                <% }); %>
                <% } %>
              </div>
              <form action="/user/<%= user.login %>/projects/<%= project.id %>/tasks/<%=task.id%>/addDev" method="POST">
                <div class="row">
                  <div class="input-field col s12 ">
                    <label for="dev" class="active">Sélectionnez un développeur</label>
                    <select class="browser-default" name="dev">
                      <option value="" disabled selected>Développeurs</option>
                      <option value="">Personne</option>
                      <% devs.forEach(function(dev) { %>
                      <option value="<%=dev.id%>"><%= dev.login %> (<%= dev.firstName %> <%= dev.lastName %>) </option>
                      <% }); %>
                    </select>
                  </div>
                </div>
                <div class="row">
                  <button class="btn-large waves-effect waves-light" type="submit" name="action">
                    Assigner
                    <i id="submitmember" class="material-icons right">person_add</i>
                  </button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>


</html>