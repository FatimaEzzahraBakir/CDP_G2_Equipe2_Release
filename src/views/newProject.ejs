<!DOCTYPE html>
<html lang="fr" dir="ltr">
<head>
  <meta charset="utf-8">
  <link rel="stylesheet" href="/css/materialize.css">
  <link rel="stylesheet" href="/css/style.css">
  <title>Création projet</title>
</head>

<body>
  <nav class="navmargin">
    <div class="nav-wrapper">
      <a href="/" class="brand-logo">Gestion projets</a>
    </div>
  </nav>
  <div class="container">
    <div class="row">
      <form action="/user/<%= user %>/newProject" method="POST">
        <div class="row">
          <div class="col s12">
            <div class="card center-align mg">
              <div class="card-content">
                <span class="card-title">Créer un nouveau projet</span>
                <% if (typeof  error != 'undefined') { %>
                  <div class="card-pannel small red darken-2 white-text"><%= error %></div>
                <% } %>
                <div class="input-field">
                  <input name="name" type="text" class="validate" placeholder="Nom du projet" required>
                </div>
                <div class="input-field" >
                  <input name="description" type="text" class="validate materialize-textarea" placeholder="Description" required>
                </div>
                <button class="btn waves-effect waves-light" type="submit">Créer</button>
                <a class="btn waves-effect waves-light red" href="/">Annuler</a>
              </div>
            </div>
          </div>
        </div>
</body>
