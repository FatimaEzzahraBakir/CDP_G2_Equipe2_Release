<!DOCTYPE html>
<html lang="fr" dir="ltr">

<head>
  <meta charset="utf-8">
  <link rel="stylesheet" href="/css/materialize.css">
  <link rel="stylesheet" href="/css/style.css">
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <title>Mes Projets</title>
</head>

<body>
  <nav class="navmargin">
    <div class="nav-wrapper">
      <a href="/" class="brand-logo">Gestion projets</a>
    </div>
  </nav>
  <div class="container">
    <div class="row">
      <div class="col s8">
        <% if(typeof projects != 'undefined') { %>
        <% projects.forEach(function(project) { %>
        <div class="row">
          <div class="card z-depth-3">
            <div class="card-content">
              <h6 class="card-title"><%= project.name %></h6>
              <p><%= project.description %></p>
            </div>
            <div class="card-action">
              <a href="/user/<%= user %>/projects/<%= project.name %>" class="left-align">Acc√©der</a>
              <a href="/user/<%= user %>/projects/<%= project.name %>/update" class="center-align">Modifier</a>
              <a href="/user/<%= user %>/projects/<%= project.name %>/delete"
                class="right materialize-red-text">Supprimer</a>
            </div>
          </div>
        </div>
        <% }); %>
        <% } %>

      </div>
      <div class="col s4">
        <div class="cardmargin">
          <a href="/user/<%= user %>/newProject" class="waves-effect waves-light btn btn-large"><i
              class="material-icons left">add</i>Nouveau Projet</a>
        </div>
      </div>
    </div>
  </div>

</body>

</html>
